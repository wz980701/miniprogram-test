.comment {
    padding: 20rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.comment:last-child {
    margin-bottom: 50rpx;
}

.comment-title {
    display: flex;
    align-items: center;
}

.comment-portrait {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.comment-nickname {
    flex: 1;
}

.comment-content {
    font-size: 32rpx;
    line-height: 1.4;
    font-weight: 400;
    padding: 10rpx 0;
}

.comment-time {
    font-size: 24rpx;
    color: #939393;
}
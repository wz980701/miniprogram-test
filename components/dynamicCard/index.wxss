.dynamic-card {
    padding: 20rpx;
    background-color: #fff;
    overflow: hidden;
}
.card-title {
    display: flex;
    align-items: center;
}
.card-portrait {
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.card-box {
    flex: 1;
}
.card-nickName {
    font-size: 32rpx;
}
.card-time {
    font-size: 24rpx;
    color: #939393;
}
.card-content {
    margin: 20rpx 0rpx;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 1.5;
}
.dynamic-img {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
}
.dynamic-img .img {
    width: 230rpx;
    height: 230rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

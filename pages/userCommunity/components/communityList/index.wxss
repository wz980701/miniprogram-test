.community-list {
    margin-top: 10rpx;
}
.community-list .community-item {
    width: 100%;
    display: flex;
    padding: 30rpx 25rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ccc;
    position: relative;
}
.community-item .avatarUrl {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 1rpx solid #ccc;
    overflow: hidden;
}
.community-item .right-side {
    margin-left: 30rpx;
}
.right-side .communityName {
    font-size: 32rpx;
    line-height: 35rpx;
    padding-top: 10rpx;
}
.community-item .item-btn {
    position: absolute;
    font-size: 28rpx;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}
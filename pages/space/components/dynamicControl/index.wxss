.ctrl {
    display: flex;
    align-items: center;
    background: #fff;
    height: 100%;
}
.ctrl-item {
    flex: 1;
    text-align: center;
    color: rgba(40, 47, 60, 0.8);
    font-size: 26rpx;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.comment-content {
    width: 560rpx;
    text-align: left;
    padding: 20rpx;
    font-size: 32rpx;
}
.send {
    background: #d43c33;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}
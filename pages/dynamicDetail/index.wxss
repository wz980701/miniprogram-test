}

.tab {
    margin-top: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    background: #fff;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.tab-item {
    color: #697480;
}

.dynamic-control {
    position: fixed;
    width: 100%;
    height: 100rpx;
    bottom: 0;
    left: 0;
    border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}
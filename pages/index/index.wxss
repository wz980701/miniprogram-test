.index-swiper {
    width: 100%;
    height: 400rpx;
}
.swiper-item {
    width: 100%;
    height: 100%;
}
.index-dropdown-menu-item {
    font-size: 30rpx !important;
}
.index-community-list {
    margin-top: 10rpx;
}
.index-community-list .index-community-item {
    width: 100%;
    display: flex;
    padding: 30rpx 25rpx;
    border-bottom: 1rpx solid #ccc;
}
.index-community-item .avatarUrl {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 1rpx solid #ccc;
    overflow: hidden;
}
.index-community-item .right-side {
    margin-left: 30rpx;
}
.right-side .communityName {
    font-size: 28rpx;
    line-height: 35rpx;
    padding-top: 10rpx;
}